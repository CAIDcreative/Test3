    CAIDcreative/sleepdentistrymelbourne 
    freeform/submissions/index.twig 
#}

{% if currentUser and currentUser.admin %}

	<!DOCTYPE html>
	<html>
	<head>
		<title>{{ siteName }} Freeform submissions</title>
		<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.1.1/jq-3.3.1/jszip-2.5.0/dt-1.10.21/af-2.3.5/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/cr-1.5.2/fc-3.3.1/fh-3.1.7/kt-2.5.2/r-2.2.5/rg-1.1.2/rr-1.2.7/sc-2.0.2/sp-1.1.1/sl-1.3.1/datatables.min.css"/>
	</head>
	<body>
		<div class="container" style="max-width: 1400px;">
			<div class="row">
				<div class="col-12 mb-3">
					<h1>{{ siteName }} Freeform submissions</h1>
				</div>
				<div class="col-12 my-3">
					{% set forms = craft.freeform.forms %}
					{% if forms | length %}
						<ul>
							<li><a href="{{ siteUrl('freeform/all-submissions') }}">All Submissions</a></li>
							{% for form in forms %}
								<li><a href="{{ siteUrl('freeform/submissions?form=' ~ form.handle) }}">{{ form.name }}</a></li>
							{% endfor %}
						</ul>
					{% endif %}
				</div>
				<div class="col-12 my-3">
					<a href="{{ siteUrl }}"><< Back to main site</a>
				</div>
			</div>
		</div>
	</body>

{% endif %}