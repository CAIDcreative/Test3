    CAIDcreative/sleepdentistrymelbourne
    contact/index.twig 
#} 

{% extends "_layouts/main" %} 

{% block main %}

    <div class="main main-shadow">
        {% include '_includes/standard-header' with {'entry': entry, } %}
        <div class="contact-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 my-5">
                        {% set locationVar = craft.app.request.getParam("location") %}
                        {#
                        {% set locationSelect = {
                            "BurwoodEast": "melbourne@allon4.com.au",
                            "Brunswick": "brunswick@allon4.com.au",
                            "Armadale": "armadale@allon4.com.au",
                            "Kew": "kew@allon4.com.au",
                        } %}
                        #}
                        {% if locationVar | length %}
                            <span>{{ locationSelect[locationVar] }}</span>
                        {% endif %}
                        {{ craft.freeform.form("contactForm").render() }}
                    </div>
                    <div class="col-md-3 ml-auto my-5">
                        {% set locations = craft.entries.section('locations').all() %}
                        {% for location in locations %}
                            <div class="">
                                <h5 class="h3 m-0 p-0 text-primary text-uppercase align-items-center">
                                    <a href="{{ location.url }}" class="text-primary font-weight-bold">{{ location.title }}</a>
                                </h5>
                                <ul>
                                    <li class="text-dark">
                                        <span class="text-dark-primary">Tel: </span><a href="{{ location.locationPhone.RFC3966 }}" class="text-secondary">{{ location.locationPhone.phone }}</a>
                                    </li>
                                    <li class="text-dark">
                                        <span class="text-dark-primary">Address: </span>{{ location.locationAddress.address1 ~ ", " ~ location.locationAddress.administrativeArea ~ " " ~ location.locationAddress.administrativeAreaCode }}
                                    </li>
                                    <li class="text-dark">
                                        <span class="text-dark-primary">Hours: </span>{{ location.locationShortStoreHours }}
                                    </li>
                                </ul>
                        	</div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# OLD CONTACT FORM
    {#
    <form role="form" id="contact-form" method="post">
        <div class="form-group bmd-form-group">
            <label for="name" class="bmd-label-floating">Your name</label>
            <input type="text" class="form-control" id="name">
        </div>
        <div class="form-group bmd-form-group">
            <label for="exampleInputEmails" class="bmd-label-floating">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmails">
            <span class="bmd-help">We'll never share your email with anyone else.</span>
        </div>
        <div class="form-group bmd-form-group">
            <label for="phone" class="bmd-label-floating">Phone</label>
            <input type="text" class="form-control" id="phone">
        </div>
        <div class="form-group bmd-form-group">

    <label for="form-input-preferredClinic" class="">Preferred Sleep Dentistry Clinic</label>
                                <select class="form-control form-control-lg form-control" name="preferredClinic" type="dynamic_recipients" id="form-input-preferredClinic"><option value="0" selected="">Burwood East</option><option value="1">Kew</option><option value="2">Brunswick</option><option value="3">Armadale</option></select>

            </div>
        <div class="form-group label-floating bmd-form-group">
            <label class="form-control-label bmd-label-floating" for="message"> Your message</label>
            <textarea class="form-control" rows="6" id="message"></textarea>
        </div>
        <div class="submit text-center h1">
            <input type="submit" class="g-recaptcha btn btn-secondary btn-raised btn-round w-100" style="font-size:30px; letter-spacing:5px;" data-sitekey="6LcaEtQUAAAAAEDZ5NCPkTH8jqF1vGjU2asXyxgZ" data-callback='onSubmit' value="Send">
        </div>
    </form>
    #}

{% endblock %}